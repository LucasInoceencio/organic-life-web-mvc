@page
@model RegisterModel
@{
    ViewData["Title"] = "Registrar";
}

<h2 style="text-align:center;">@ViewData["Title"]</h2>

<div class="row" style="display:flex; flex-direction:column; align-items:center;">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Criar nova conta.</h4>
            <hr />
            <div>
                <label>Tipo usuário</label>
                <br />
                Fornecedor
                @Html.RadioButtonFor(model => model.Input.TipoUsuario, "Fornecedor")
                Cliente
                @Html.RadioButtonFor(model => model.Input.TipoUsuario, "Cliente")

            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Input.NomeFantasia">Nome Fantasia</label>
                <input asp-for="Input.NomeFantasia" class="form-control" />
                <span asp-validation-for="Input.NomeFantasia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.RazaoSocial">Razao Social</label>
                <input asp-for="Input.RazaoSocial" class="form-control" />
                <span asp-validation-for="Input.RazaoSocial" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.NomeCompleto">Nome Completo</label>
                <input asp-for="Input.NomeCompleto" class="form-control" />
                <span asp-validation-for="Input.NomeCompleto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Cpf">CPF</label>
                <input asp-for="Input.Cpf" class="form-control" />
                <span asp-validation-for="Input.Cpf" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Rg">RG</label>
                <input asp-for="Input.Rg" class="form-control" />
                <span asp-validation-for="Input.Rg" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Cnpj">CNPJ</label>
                <input asp-for="Input.Cnpj" class="form-control" />
                <span asp-validation-for="Input.Cnpj" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.DataNascimento">Data Nascimento</label>
                <input asp-for="Input.DataNascimento" class="form-control" />
                <span asp-validation-for="Input.DataNascimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Telefone">Telefone</label>
                <input asp-for="Input.Telefone" class="form-control" />
                <span asp-validation-for="Input.Telefone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Celular">Celular</label>
                <input asp-for="Input.Celular" class="form-control" />
                <span asp-validation-for="Input.Celular" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Logradouro">Logradouro</label>
                <input asp-for="Input.Logradouro" class="form-control" />
                <span asp-validation-for="Input.Logradouro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Bairro">Bairro</label>
                <input asp-for="Input.Bairro" class="form-control" />
                <span asp-validation-for="Input.Bairro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Numero">Número</label>
                <input asp-for="Input.Numero" class="form-control" />
                <span asp-validation-for="Input.Numero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Cidade">Cidade</label>
                <input asp-for="Input.Cidade" class="form-control" />
                <span asp-validation-for="Input.Cidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Cep">CEP</label>
                <input asp-for="Input.Cep" class="form-control" />
                <span asp-validation-for="Input.Cep" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Email">E-mail</label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password">Senha</label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword">Confirmar senha</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-default">Criar conta</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
