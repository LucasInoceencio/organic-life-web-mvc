@page
@model RegisterModel
@{
    ViewData["Title"] = "Registrar";
}

<h2 style="text-align:center;">@ViewData["Title"]</h2>

<div class="row" style="display:flex; flex-direction:column; align-items:center;">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Criar nova conta.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email">E-mail</label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password">Senha</label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword">Confirmar senha</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-check">
                <input class="form-check-input" asp-for="Input.IsFornecedor" checkd="false" type="radio" name="radio" id="Fornecedor">false
                @*<label class="form-check-label" asp-for="Input.IsFornecedor" for="Fornecedor">
                    Fornecedor
                </label>*@
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="radio" id="Cliente" checked>
                <label class="form-check-label" for="Cliente">
                    Cliente
                </label>
            </div>
            <button type="submit" class="btn btn-default">Criar conta</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
