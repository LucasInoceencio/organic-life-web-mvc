@model OrganicLifeWebMvc.Models.Cliente

@{
    ViewData["Title"] = "Delete";
}

<h2 style="text-align:center;">Deletar Cliente</h2>
<div>
    <h4>Cliente</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Data/Hora Cadastro:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DataHoraCadastro)
        </dd>
        <dt>
            Responsável:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ResponsavelCadastro)
        </dd>
        <dt>
            Data/Hora Alteração
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DataHoraAlteracao)
        </dd>
        <dt>
            Responsável
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ResponsavelAlteracao)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Deletar" class="btn btn-danger btn-sm" /> |
        <a asp-action="Index" class="btn btn-default btn-sm">Voltar</a>
    </form>
</div>
