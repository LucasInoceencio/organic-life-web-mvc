@model OrganicLifeWebMvc.Models.Cliente

@{
    ViewData["Title"] = "Details";
}

<h2 style="text-align:center;">Detalhes</h2>

<div>
    <h4>@Html.DisplayNameFor(model => model.Pessoa.Nome)</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Data/Hora Cadastro:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DataHoraCadastro)
        </dd>
        <dt>
            Responsável:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ResponsavelCadastro)
        </dd>
        <dt>
            Data/Hora Alteração:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DataHoraAlteracao)
        </dd>
        <dt>
            Responsável:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ResponsavelAlteracao)
        </dd>
    </dl>
</div>
<div class="d-flex justify-content-around">
    <input type="submit" value="Editar" asp-action="Clientes" class="btn btn-success btn-sm" /> |
    <a class="btn btn-danger btn-sm" asp-action="Index">Cancel</a>
</div>
