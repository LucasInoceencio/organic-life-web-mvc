@model OrganicLifeWebMvc.Models.Fornecedor

@{
    ViewData["Title"] = "Create";
}

<h2 style="text-align:center;">Cadastro de Fornecedor</h2>
<hr />
<div class="row" style="display:flex; flex-direction:column; align-items:center;">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="form-group col-md-12">
                    <label asp-for="PessoaJuridica.NomeFantasia" class="control-label">Nome Fantasia</label>
                    <input asp-for="PessoaJuridica.NomeFantasia" class="form-control" />
                    <span asp-validation-for="PessoaJuridica.NomeFantasia" class="text-danger"></span>
                </div>
                <div class="form-group col-md-12">
                    <label asp-for="PessoaJuridica.RazaoSocial" class="control-label">Razão Social</label>
                    <input asp-for="PessoaJuridica.RazaoSocial" class="form-control" />
                    <span asp-validation-for="PessoaJuridica.RazaoSocial" class="text-danger"></span>
                </div>
                <div class="form-group col-md-12">
                    <label asp-for="PessoaJuridica.Cnpj" class="control-label">CNPJ</label>
                    <input asp-for="PessoaJuridica.Cnpj" class="form-control" />
                    <span asp-validation-for="PessoaJuridica.Cnpj" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="PessoaJuridica.Celular" class="control-label">Celular</label>
                    <input asp-for="PessoaJuridica.Celular" class="form-control" />
                    <span asp-validation-for="PessoaJuridica.Celular" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="PessoaJuridica.Telefone" class="control-label">Telefone</label>
                    <input asp-for="PessoaJuridica.Telefone" class="form-control" />
                    <span asp-validation-for="PessoaJuridica.Telefone" class="text-danger"></span>
                </div>
                <div class="form-group col-md-8">
                    <label asp-for="PessoaJuridica.Email" class="control-label">E-mail</label>
                    <input asp-for="PessoaJuridica.Email" class="form-control" />
                    <span asp-validation-for="PessoaJuridica.Email" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="PessoaJuridica.Responsavel" class="control-label">Responsável</label>
                    <input asp-for="PessoaJuridica.Responsavel" class="form-control" />
                    <span asp-validation-for="PessoaJuridica.Responsavel" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="DataHoraCadastro" class="control-label">Data/Hora Cadastro</label>
                    <input asp-for="DataHoraCadastro" class="form-control" />
                    <span asp-validation-for="DataHoraCadastro" class="text-danger"></span>
                </div>                
                <div class="form-group col-md-8">
                    <label asp-for="ResponsavelCadastro" class="control-label">Responsável Cadastro</label>
                    <input asp-for="ResponsavelCadastro" class="form-control" />
                    <span asp-validation-for="ResponsavelCadastro" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="DataHoraAlteracao" class="control-label">Data/Hora Alteração</label>
                    <input asp-for="DataHoraAlteracao" class="form-control" />
                    <span asp-validation-for="DataHoraAlteracao" class="text-danger"></span>
                </div>
                <div class="form-group col-md-8">
                    <label asp-for="ResponsavelAlteracao" class="control-label">Responsável Alteração</label>
                    <input asp-for="ResponsavelAlteracao" class="form-control" />
                    <span asp-validation-for="ResponsavelAlteracao" class="text-danger"></span>
                </div>
                <div class="form-group col-md-12">
                    <input type="submit" value="Cadastrar" class="btn btn-success" />
                    <a class="btn btn-danger" asp-action="Index">Cancelar</a>
                </div>
            </div>
            
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
