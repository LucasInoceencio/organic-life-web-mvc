@model IEnumerable<OrganicLifeWebMvc.Models.Fornecedor>

@{
    ViewData["Title"] = "Index";
}

<h2 style="text-align:center; padding:20px;">Fornecedores</h2>
<div class="container" style="display:flex; flex-direction:column; align-items:center; padding:20px;">
    <table class="table table-striped" style="width:700px;">
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td style="width:13%; height:auto;">
                        <img src="~/images/adidas.jpg" style="width:100%; height:auto; border-radius:10px;" />
                    </td>
                    <td style="text-align:center; margin-top:10px; font-size:30px;">
                        @Html.DisplayFor(modelItem => item.PessoaJuridica.NomeFantasia)
                    </td>
                    <td style="width:20%;">
                        <a asp-action="ProdutosLista" asp-route-id="@item.Id" class="btn btn-success">Visualizar Produtos</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
