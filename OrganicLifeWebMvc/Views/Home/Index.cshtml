@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/organic2.jpg" alt="Produtos Orgânicos" class="img-responsive" />
            <div class="carousel-caption" role="option">       
            </div>
        </div>
        <div class="item">
            <img src="~/images/organic1.png" alt="Produtos Orgânicos" class="img-responsive" />
            <div class="carousel-caption" role="option">
            </div>
        </div>
        <div class="item">
            <img src="~/images/organicos.jpg" alt="Produtos Orgânicos" class="img-responsive" />
            <div class="carousel-caption" role="option">
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<div class="row" style="padding:20px; display:flex; flex-direction:row; justify-content:space-around;">
    <div style="display:flex; flex-direction:row; align-items:center; width:45%; justify-content:space-around;">
        <img src="~/images/frete-gratis1.png" style="width:20%;" />
        <h4 style="font-weight: bold;">Frete grátis em compras acima de R$ 99,99</h4>
    </div>
    <div style="display:flex; flex-direction:row; align-items:center; width:50%; justify-content:space-around;">
        <img src="~/images/relogio.png" style="width:13%;" />
        <h4 style="font-weight: bold;">Faça seu pedido até as 10:00 e receba no mesmo dia!</h4>
    </div>   
</div>
<div class="row" style="padding-top:10px;">
    <div style="display:flex; flex-direction:row; justify-content:space-around; align-items:center;">
        <img src="~/images/produtos-organicos-home.jpg" style="width:40%;"/>
        <div style="width:55%;">
            <h3>Receba em sua casa produtos orgânicos de alta qualidade!</h3>
            <p>
                Receba todos os dias no conforto de sua casa nossos produtos colhidos no mesmo dia e sempre frescos.
            </p>
            <a class="btn btn-success btn-sm">Ir para compras</a>
        </div>
    </div>
</div>
<hr />
<div class="row">
    <h2 style="text-align:center; padding-top:10px;">
        Como Funciona?
    </h2>
    <div style="padding:20px; display:flex; flex-direction:row; justify-content:space-between;" class="row">
        <div class="card" style="width: 22%;  border-radius:5px; border: 0.5px solid #DCDCDC;">
            <img class="card-img-top" src="~/images/produtos-home1.png" alt="Card image cap" style="width:100%; height:auto; border-top-left-radius:5px; border-top-right-radius:5px;">
            <div class="card-body" style="padding:10px;">
                <h5 class="card-title" style="font-weight:bold;">Você escolhe os produtos</h5>
                <p class="card-text">Escolha seus produtos, verduras, legumes entre outros.</p>
            </div>
        </div>
        <div class="card" style="width: 22%;  border-radius:5px; border: 0.5px solid #DCDCDC;">
            <img class="card-img-top" src="~/images/produtos-home2.jpg" alt="Card image cap" style="width:100%; height:auto; border-top-left-radius:5px; border-top-right-radius:5px;">
            <div class="card-body" style="padding:10px;">
                <h5 class="card-title" style="font-weight:bold;">Produtos sempre frescos</h5>
                <p class="card-text">Nossos produtos são colhidos todos os dias, para serem entregues sempre frescos.</p>
            </div>
        </div>
        <div class="card" style="width: 22%;  border-radius:5px; border: 0.5px solid #DCDCDC;">
            <img class="card-img-top" src="~/images/produtos-home3.jpg" alt="Card image cap" style="width:100%; height:auto; border-top-left-radius:5px; border-top-right-radius:5px;">
            <div class="card-body" style="padding:10px;">
                <h5 class="card-title" style="font-weight:bold;">Receba no conforto de casa</h5>
                <p class="card-text">Se o pedido for realizado antes das 10:00, entregaremos os produtos no mesmo dia.</p>
            </div>
        </div>
        <div class="card" style="width: 22%;  border-radius:5px; border: 0.5px solid #DCDCDC;">
            <img class="card-img-top" src="~/images/produtos-home4.jpg" alt="Card image cap" style="width:100%; height:auto; border-top-left-radius:5px; border-top-right-radius:5px;">
            <div class="card-body" style="padding:10px;">
                <h5 class="card-title" style="font-weight:bold;">Incentive o pequeno produtor</h5>
                <p class="card-text">Você incentiva o pequeno produtor, ajuda a natureza e melhora sua saúde.</p>
            </div>
        </div>
    </div>    
